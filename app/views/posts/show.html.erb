<div class="card">
<p>
  <strong>User:</strong>
  <%= @post.user.user_name %>
</p>

<p>
  <strong>Topic:</strong>
  <%= @post.topic.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to "Comment", new_post_comment_path(@post) %>

<% @comments.each do |comment| %>
<div class="card">
  <%= comment.content %>
  <%= comment.user.user_name %>
  <hr>
  </div>
<% end %>

<%= link_to 'Back', root_path %>
</div>
