<%= turbo_frame_tag :topic_page do %>
<div class="card">
<p>
  <%= @post.user.user_name %>
</p>
<div class="card-fg-show">
<p>
  <strong>Topic:</strong>
  <%= @post.topic.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<div class="card-fg-comments">
<% @comments.each do |comment| %>
  <div class="comment">
    <div class="comment-content">
      <%= comment.content %>
    </div>
    <div class="comment-user">
      <%= comment.user.user_name %>
    </div>
  </div>
<% end %>
  </div>
</div>

<% if @post.likers.include?(current_user) %>
    <%= button_to 'unlike', unlike_post_path(@post), method: :delete  %>
  <% else %>
    <%= button_to 'like', like_post_path(@post), method: :post  %>
<% end %>

<div class="comment-like">
<p>
  <% if @post.likers.count > 1 %>
    <%= @post.likers.count %> likes
  <% else %>
    <%= @post.likers.count %> like
  <% end %>
</p>
  </div>


<%= link_to "COMMENT", new_post_comment_path(@post), class: 'btn', style: 'background-color: #86D293; color: white;' %>
<%= link_to " Back", topic_path(@topic) %>
</div>
<% end %>
