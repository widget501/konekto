<div class="card">
<p>
  <strong>User:</strong>
  <%= @post.user.user_name %>
</p>

<p>
  <strong>Topic:</strong>
  <%= @post.topic.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<% if @post.likers.include?(current_user) %>
    <%= button_to 'unlike', unlike_post_path(@post), method: :delete  %>
  <% else %>
    <%= button_to 'like', like_post_path(@post), method: :post  %>
<% end %>

<div class="comment-like">
 <p>
  <% if @post.likers.count > 1 %>
    <%= @post.likers.count %> likes
  <% else %>
    <%= @post.likers.count %> like
  <% end %>
 </p>
  <%= link_to "Comment", new_post_comment_path(@post) %>
</div>


<% @comments.each do |comment| %>
<div class="card">
  <%= comment.content %>
  <%= comment.user.user_name %>
  <hr>
  </div>
<% end %>

<%= link_to 'Back', root_path %>
</div>
