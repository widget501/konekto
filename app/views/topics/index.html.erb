<div class="card">
  <h1>TOPICS</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @topics.each do |topic| %>
        <div class="card">
          <tr>
            <td><%= topic.title %></td>
            <td><%= topic.description %></td>
            <td><%= topic.category.title %></td>
            <td><%= link_to 'Show', topic_path(topic), class: 'btn', style: 'background-color: #86D293; color: azure;' %></td>
            <td><%= link_to 'Edit', edit_topic_path(topic), class: 'btn', style: 'background-color: #86D293; color: azure;' %></td>
            <!--<td><%#= link_to 'Destroy', topic_path(topic), method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
          </tr>
        </div>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
