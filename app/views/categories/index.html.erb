<div class="card">
  <h1>CATEGORIES</h1>
  <div class="home-content">
    <ul>
      <% @categories.each do |category| %>
      <div class="card">
        <li><%= link_to category.title, category_path(category) %></li>
      </div>
      <% end %>
    </ul>
    <div class="scrollable-container">
      <div data-controller="scroll" data-scroll-target="posts" class="scrollable-content">
        <% @posts.shuffle.each do |post| %>
          <div class="scroll-post">
            <%= post.content %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
