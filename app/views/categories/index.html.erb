<div class="card">
  <h2>CATEGORIES</h2>
  <div class="home-content">
    <ul>
      <% @categories.each do |category| %>
      <div class="card-fg">
        <li>
          <%= link_to category_path(category) do %>
            <i class="<%= category_icon(category) %>"></i>
            <%= category.title %>
          <% end %>
        </li>
      </div>
      <% end %>
    </ul>
    <div class="scrollable-container">
      <div data-controller="scroll" data-scroll-target="posts" class="scrollable-content">
        <% @posts.shuffle.each do |post| %>
          <div class="card-fg">
            <%= link_to post_path(post) do %>
              <%= post.content %>
            <% end %>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>
